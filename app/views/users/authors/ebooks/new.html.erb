<h3>Posting as <%= @author.name %></h3>
<h5>Please double check everything as an eBook cannot be edited after release</h5>

<%= form_tag(users_authors_ebooks_path) do %>
  <div class="form-group">
  <%= text_field_tag :title, nil, {class: "form-control", placeholder: "Title"} %>
  </div>
  <div class="form-group">
  <%= text_area_tag :description, nil, {class: "form-control", placeholder: "Description"} %>
  </div>
  <div class="form-group">
  <%= text_field_tag :price, nil, {class: "form-control", placeholder: "2.00"} %>
  </div>
  <div class="form-group">
  <%= text_area_tag :body, nil, {class: "form-control", placeholder: "Paste body here"} %>
  </div>
  <div class="form-group">
  <%= submit_tag "Submit eBook", class: 'btn' %>
  </div>
  <%= hidden_field_tag 'author_id', @author.id %>
<% end %>
