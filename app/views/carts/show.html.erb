<h1>Your Cart</h1>

<table class="table">
<% @ebooks.each do |ebook| %>
  <tr class="cart-item">
    <td><%= ebook.title %></td>
    <td><%= number_to_currency(ebook.price) %></td>
    <td><%= button_to "Remove", cart_path(ebook), method: :delete, class: "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<% if current_user %>
  <%= button_to "Checkout", new_order_path(current_user), method: :get, class: "btn btn-primary" %>
<% else %>
  <%= link_to "Login or Register to checkout", login_path %>
<% end %>
