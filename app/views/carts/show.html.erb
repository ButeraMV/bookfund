<h1>Your Cart</h1>

<% @ebooks.each do |ebook| %>
  <div class="cart-item">
    <p><%= ebook.title %></p>
    <p><%= number_to_currency(ebook.price) %></p>
    <p><%= button_to "Remove", cart_path(ebook), method: :delete %></p>
  </div>
<% end %>

<% if current_user %>
  <%= button_to "Checkout", new_order_path(current_user), method: :get %>
<% else %>
  <p class="text-right"><%= link_to "Login or Register to checkout", login_path %></p><br />
<% end %>